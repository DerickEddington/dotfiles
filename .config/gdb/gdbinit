# Useful locations to have in the "source path".
source ~/.config/gdb/my-source-path-init


# How a program behaves under debugging

# Can be changed by user.
target native
# Requires `target native`.
set scheduler-locking step
set step-mode on


# User interface

set disassembly-flavor intel
set print pretty on


# Helpers

define omit
  if $argc == 0
    tbreak +1
    jump +1
  else
    tbreak $arg0
    jump $arg0
  end
end
